---
import SectionContainer from "@Components/SectionContainer.astro";

const cards = [
  {
    title: "Z-PRINT",
    subtitle: "Impresión 3D por Demanda",
    description:
      "Servicio de impresión FDM y SLA para prototipos, piezas funcionales y proyectos académicos.",
    features: [
      "Materiales: PLA, PETG, ABS, Eco-Z, Resina",
      "Entrega 48–72 h (Servicio Express)",
      "Post-procesado incluido",
      "Control de calidad profesional",
    ],
    highlight: false,
  },
  {
    title: "Diseño 3D",
    subtitle: "Modelado Profesional",
    description:
      "Creamos modelos 3D desde cero o ajustamos tus archivos para imprimirlos correctamente.",
    features: [
      "Modelado en Fusion 360 / Blender / AutoCAD",
      "Optimización de tolerancias",
      "Reparación de archivos STL",
      "Renderizado opcional",
    ],
    highlight: true,
  },
  {
    title: "Eco-Z",
    subtitle: "Reciclaje de Filamento",
    description:
      "Procesamos tus residuos de impresión 3D para convertirlos en filamento reciclado.",
    features: [
      "Triturado • Extrusión • Bobinado",
      "Reducción de residuos",
      "Proceso sustentable",
      "Filamento 100% reciclado",
    ],
    highlight: false,
  },
  {
    title: "Mantenimiento",
    subtitle: "Impresoras FDM y SLA",
    description:
      "Servicio técnico para impresoras 3D: limpieza, calibración y refacciones.",
    features: [
      "Cambio de boquillas",
      "Calibración completa",
      "Optimización de firmware",
      "Diagnóstico preventivo",
    ],
    highlight: false,
  },
];
---

<section
  class="relative isolate bg-gray-900 px-6 py-24 sm:py-32 lg:px-8 overflow-hidden"
  id="services"
>
  <!-- Degradado naranja -->
  <div
    aria-hidden="true"
    class="absolute inset-x-0 -top-3 -z-10 transform-gpu overflow-hidden px-36 blur-3xl"
  >
    <div
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
      class="mx-auto aspect-1155/678 w-[288.75rem] bg-gradient-to-tr from-orange-400 to-orange-600 opacity-20"
    >
    </div>
  </div>

  <!-- Títulos -->
  <div class="mx-auto max-w-4xl text-center">
    <p
      class="mt-2 text-5xl font-semibold tracking-tight text-white sm:text-6xl font-Jockey"
    >
      Soluciones de Impresión 3D para Todos
    </p>
  </div>

  <p
    class="mx-auto mt-6 max-w-2xl text-center text-lg font-medium text-gray-400"
  >
    Todo lo que necesitas para prototipos, manufactura, diseño y reciclaje de
    filamento.
  </p>

  <!-- Cards -->
  <div
    class="mx-auto mt-16 grid max-w-lg grid-cols-1 gap-6 sm:mt-20 lg:max-w-6xl lg:grid-cols-4"
  >
    {
      cards.map((card) => (
        <div
          class={`relative flex flex-col min-h-[360px] p-8 ring-1 ring-white/10 rounded-3xl bg-white/5 backdrop-blur-sm transition-all
        ${card.highlight ? "bg-orange-500/20 ring-orange-400/30 shadow-xl" : ""}`}
        >
          <div class="mb-4">
            <h3 class="text-base font-semibold text-orange-400 font-Jockey">
              {card.title}
            </h3>
            <p class="mt-1 text-lg font-semibold text-white font-Jockey">
              {card.subtitle}
            </p>
          </div>

          <p class="mt-2 text-base text-gray-300 font-eue grow leading-relaxed">
            {card.description}
          </p>

          <ul role="list" class="mt-6 space-y-2 text-sm text-gray-300 font-eue">
            {card.features.map((feat) => (
              <li class="flex gap-x-2 items-start">
                <svg
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                  class="h-5 w-5 flex-none text-orange-400 shrink-0 mt-0.5"
                >
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
                  />
                </svg>
                <span class="pt-0.5">{feat}</span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }

<div>
    <a
      href="/contact"
      class="mt-8 block rounded-md px-3.5 py-2.5 text-center text-sm font-semibold text-white bg-orange-500 
      hover:bg-orange-400 focus-visible:outline-orange-500"
    >
      Realiza tu cotización
    </a>
</div>

  </div>
</section>
